@model WebApp.Areas.Negocios.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ ViewData["Title"] = "Nuevo negocio";
    Layout = "_Layout"; }
@section Styles {
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-page="Index">Inicio</a></li>
                    <li class="breadcrumb-item">Catalogos</li>
                    <li class="breadcrumb-item">categorias</li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="card-title">Llene correctamente el formulario</div>
            <div class="card-tools">
                <a asp-area="Negocios" asp-page="Index" class="btn btn-outline-info float-right"><i class="fas fa-arrow-left"></i> Volver al Listado</a>
            </div>
        </div>
        <div class="card-body">
            <!-- form start -->
            <form method="post" asp-action="Create" autocomplete="off">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Negocio.Nombre"></label>
                        <input class="form-control" asp-for="Negocio.Nombre" placeholder="Nombre del negocio">
                        <span class="text-danger" asp-validation-for="Negocio.Nombre"></span>
                        <label asp-for="Negocio.Telefono"></label>
                        <input class="form-control" asp-for="Negocio.Telefono" placeholder="Teléfono del negocio">
                        <span class="text-danger" asp-validation-for="Negocio.Telefono"></span>
                        <label asp-for="Negocio.Email"></label>
                        <input class="form-control" asp-for="Negocio.Email" placeholder="Email del negocio">
                        <span class="text-danger" asp-validation-for="Negocio.Email"></span>
                        <label asp-for="Negocio.Direccion"></label>
                        <input class="form-control" asp-for="Negocio.Direccion" placeholder="Dirección del negocio">
                        <span class="text-danger" asp-validation-for="Negocio.Direccion"></span>
                    </div>
                    <div class="form-group">
                        <div class="icheck-success d-inline">
                            <input type="checkbox" asp-for="Negocio.Activo" checked="checked">
                            <label asp-for="Negocio.Activo">
                                Activo
                            </label>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar</button> &nbsp;
                    <button type="reset" class="btn btn-warning"><i class="fas fa-eraser"></i> Limpiar</button>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
</section>
<!-- /.content -->
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
        $(document).ready(function () {
            $('#a-Negocio').addClass("active");
        });</script>
    @await Component.InvokeAsync("Notyf")
}
