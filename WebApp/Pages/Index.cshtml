@model WebApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="jumbotron">
    <h1>Haga su pedido</h1>
</div>
<div class="row" style="padding: 20px">
    @foreach (var item in Model.Categorias)
    {
    <div class="col-md-4">
        <div class="card border border-primary mb-3">
            <h4 class="card-header">@item.Nombre</h4>
            <div class="card-body text-primary">
                <h5 class="card-title">Primary card title</h5>
                <p class="card-text">Esta es una categoría, seleccionala si quieres @item.Nombre</p>
                <a class="btn btn-primary" asp-area="Negocios" asp-page="Index">Realizar pedido</a>
            </div>
        </div>
    </div>}
